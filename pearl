def msf():
	print("1.Install Metasploit Framework")
	print("2.Metasploit Framework version")
	print("3.Windows > payload.exe (payload and listener) ")
	print("4.Android > payload.apk(Payload and listener)") 
	print("5.Linux >  payload.py(payload and listener)")
	print("6.MacOS > payload.jar(payload and listener)")
	print ("7.Web > payload.php(payload and listener)")
	print("8.Simple TCP shell for PHP")
	print("9.Simple TCP shell for WAR")
	print("10.Simple TCP shell for ASP")
	print("11. Simple TCP shell for javascript")
	print("12.Trojan or backdoor for windows xp/7")
	print("13.Harvest email using metasploit framework")
	i = input("[msf>")
	if i == '1':
		print("Installing Metasploit Framework")
		time.sleep(2)
		os.system("pkg install metasploit")
	elif i == '2':
		print("5.0.0 / January 10, 2019")
	elif i == '3':
		os.system("cd  ~/Blackpearl-framework/module;bash windows.sh")
	elif i == '4':
		os.system("cd  ~/Blackpearl-framework/module;bash android.sh")
	elif i == '5':
		os.system("cd  ~/Blackpearl-framework/module;bash python.sh")
	elif i == '6':
		os.system("cd  ~/Blackpearl-framework/module;bash jar.sh")
	elif i == '7':
		os.system("cd  ~/Blackpearl-framework/module;bash php.sh")
	elif i == '8':
		os.system("cd  ~/Blackpearl-framework/module;bash tp.sh")
	elif i == '9':
		os.system("cd  ~/Blackpearl-framework/module;bash war.sh")
	elif i == '10':
		os.system("cd  ~/Blackpearl-framework/module;bash asp.sh")
	elif i == '11':
		os.system("cd  ~/Blackpearl-framework/module;bash jsp.sh")
	elif i == '12':
		os.system("cd  ~/Blackpearl-framework/module;bash trojan.sh")
	elif i == '13':
		os.system("cd  ~/Blackpearl-framework/module;bash email.sh")
	elif i == 'back':
		main()
	elif i == 'help':
	    print("This for exploiting a system")
	else:
	    print("[!] Invalid input")
	    sys.exit(1)

