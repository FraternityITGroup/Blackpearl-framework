import socket,os
def chat():
	os.system("clear")
	print()
	print("Welcome To Fraternity InfoSec's Terminal Chat System - \x1b[91mECHO\x1b[00m ")
	print()
	print("Select options given. For any help visit official website www.blackpearlframework.weebly.com")
	print()
	print("1. Starter \n2. Client")
	print()
	chat = input("[pearl(chat) >  ")
	if chat == '1':
		os.system("clear")
		print(""" """)
		print("Note : Starter should send the message first after connected")
		print()
		ip = input("Your IP : ")
		port = 5555
		s = socket.socket()
		s.bind((ip, port))
		s.listen(4)
		conn, addr = s.accept()
		print("Connection Established")
		while True:
			print()
			msg = input("Message :  ")
			conn.send(msg.encode())
			print("sended")
			print()
			ms = conn.recv(1024)
			print("Received :  ",ms.decode())
			if msg == 'exit':
				print("[*] Closing Console")
				main()
			elif msg == 'back':
				chat()
	elif chat == '2':
		os.system("clear")
		print(""" """)
		print()
		print("Note : Starter should send the message first after connected")
		print()
		s = socket.socket()
		ip = input("Starter IP : ")
		port = 5555
		s.connect((ip, port))
		print("Connection Established")
		print()
		print("Waiting for message..")
		while True:
			ms = s.recv(1024)
			print()
			print("Received :  ", ms.decode())
			print()
			msg = input("Message :  ")
			s.send(msg.encode())
			print("sended")
			if msg == 'exit':
				print("[*] Closing Console")
				main()
			elif msg == 'back':
				chat()

