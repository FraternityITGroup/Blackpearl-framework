#!/bin/env python
import os,sys
import time
os.system("cd ~/Blackpearl-framework; ./run")
i = input("<pearl~>")
if i == 'msf':
	print("Opening Metasploit Framework Automater Console")
	time.sleep(2)
	os.system("cd lib;python msf.py")
elif i == 'sql':
	print("Opening Sqlmap Automater Console")
	time.sleep(2)
	os.system("cd lib;python sql.py")
elif i == 'webjam':
	print("Opening Ddos Automater Console")
	time.sleep(2)
	os.system("cd lib;python Ddos.py")
elif i == 'nmap':
	print("Opening Network Mapper Automater Console")
	time.sleep(2)
	os.system("cd lib;bash nmapper.sh")
elif i == 'wl':
	print("Opening WordLister Automater Console")
	time.sleep(2)
	os.system("cd lib;bash wl.sh")
elif i == 'hydra':
	print("Opening Hydra Automater Console")
	time.sleep(2)
	os.system("cd lib;python hydra.py")
elif i == 'update':
	print("Checking For Updation....")
	time.sleep(2)
	os.system("cd module;bash update.sh")
elif i == 'help':
	print("""
	TYPE BELOW COMMANDS IN CONSOLE : \n msf - To open metasploit automater console \n sql - To open sqlmap automater console \n ddos - To open webjam ddos automater console \n nmap - To open nmap automater comsole \n wl - To open wordlist maker automater console \n hydra - To open hydra bruteforce automater console \n about - To know about us \n update - To update Blackpearl Framework \n help - For help \n
	""")
elif i == 'about':
	os.system("cd module;python about.py")
elif i == 'exit':
	sys.exit(1)
else:
	print("Invalid inputs")
	print("Blackpearl-Framework console closing")
	print("From Fraternity")
	sys.exit(1)
	

