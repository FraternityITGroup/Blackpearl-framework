def base():
	print()
	print("1. Base64 encode")
	print("2. Base64 decode")
	print("3. md5 encode")
	print()
	bas = input("[pearl(base64) >  ")
	if bas == '1':
		cod = input("Text to encode :  ")
		print()
		os.system("echo '" + cod + "' | base64")
		base()
	elif bas == '2':
		cod = input("Code to decode :  ")
		os.system("base64 -d <<< " + cod)
		base()
	elif bas == 'back':
		main()
	elif bas == 'md5':
		string = input("TEXT :  ")
		rslt = hashlib.md5(string.encode())
		print("Hex output of given code :  ",rslt.hexdigest())
		base()
	else:
		print("[!] Invalid Input")
		print("[!] Try Again")
		base()

